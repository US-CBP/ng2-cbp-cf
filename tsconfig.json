{
    "compilerOptions": {
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es6"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "strict": true,
        "target": "es5",
        "types": [
            "jasmine",
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText":  true
    }
}
